{
  "name": "@gitpkg/site",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "tools/*",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/EqualMa/gitpkg.git"
  },
  "scripts": {
    "lint": "eslint --cache --ext .js,.ts",
    "lint:fix": "eslint --cache --max-warnings 0 --fix",
    "test": "lerna run test",
    "now-build": "yarn run build && yarn run test",
    "build": "lerna run build"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/register": "^7.8.6",
    "@gitpkg/common": "*",
    "@now/node": "^1.4.1",
    "@types/jest": "^25.1.3",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "imagemin-lint-staged": "^0.4.0",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "now": "^17.0.4",
    "prettier": "3.2.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@gitpkg/core": "^1.0.0-alpha"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run precommit --workspaces --if-present"
    }
  }
}
